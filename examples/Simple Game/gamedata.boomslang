
class Sprite
	Image^ image
	Number x
	Number y
	
	def draw()
		image.draw(x, y)

class Resources
	Image player_right
	Image player_left
	Image platform
	Image flower
	
	def load()
		player_right.load("player_right.png")
		player_left.load("player_left.png")
		platform.load("platform.png")
		flower.load("flower.png")

class GameData
	Resources resources
	Sprite player
	
	def load()
		player.image = &resources.player_right
		player.x = 128
		player.y = 32
